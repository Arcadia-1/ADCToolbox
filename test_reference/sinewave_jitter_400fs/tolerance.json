{
  "description": "Tolerance settings for sinewave_jitter_400fs cross-platform validation",
  "dataset": "sinewave_jitter_400fs",

  "test_sineFit": {
    "freq": {
      "atol": 0.0001,
      "rtol": 1e-5,
      "description": "Normalized frequency (0-1)"
    },
    "mag": {
      "atol": 0.01,
      "rtol": 1e-4,
      "description": "Signal magnitude"
    },
    "dc": {
      "atol": 0.001,
      "rtol": 1e-4,
      "description": "DC offset"
    },
    "phi": {
      "atol": 0.01,
      "rtol": 1e-4,
      "description": "Phase (radians)"
    },
    "data_fit": {
      "atol": 0.01,
      "rtol": 1e-4,
      "description": "Fitted sine wave samples"
    }
  },

  "test_specPlot": {
    "ENoB": {
      "atol": 0.01,
      "rtol": 0.001,
      "description": "Effective Number of Bits"
    },
    "SNDR": {
      "atol": 0.1,
      "rtol": 0.01,
      "description": "Signal-to-Noise and Distortion Ratio (dB)"
    },
    "SFDR": {
      "atol": 0.1,
      "rtol": 0.01,
      "description": "Spurious-Free Dynamic Range (dB)"
    },
    "SNR": {
      "atol": 0.1,
      "rtol": 0.01,
      "description": "Signal-to-Noise Ratio (dB)"
    },
    "THD": {
      "atol": 0.1,
      "rtol": 0.01,
      "description": "Total Harmonic Distortion (dB)"
    },
    "pwr": {
      "atol": 0.1,
      "rtol": 0.01,
      "description": "Signal power (dBFS)"
    },
    "NF": {
      "atol": 0.1,
      "rtol": 0.01,
      "description": "Noise floor (dB)"
    }
  },

  "test_errPDF": {
    "mu": {
      "atol": 0.001,
      "rtol": 1e-4,
      "description": "Mean of error distribution"
    },
    "sigma": {
      "atol": 0.01,
      "rtol": 0.01,
      "description": "Standard deviation of error"
    },
    "KL_divergence": {
      "atol": 0.05,
      "rtol": 0.1,
      "description": "KL divergence from Gaussian"
    }
  },

  "test_errAutoCorrelation": {
    "acf": {
      "atol": 0.01,
      "rtol": 0.05,
      "description": "Autocorrelation function values"
    },
    "lags": {
      "atol": 0,
      "rtol": 0,
      "description": "Lag values (integer, must match exactly)"
    }
  },

  "test_tomDecomp": {
    "signal": {
      "atol": 0.01,
      "rtol": 1e-4,
      "description": "Extracted signal component"
    },
    "error": {
      "atol": 0.01,
      "rtol": 1e-4,
      "description": "Error component"
    }
  },

  "notes": {
    "atol": "Absolute tolerance - maximum allowed difference",
    "rtol": "Relative tolerance - maximum allowed percentage difference",
    "validation": "Python output is valid if: |python - matlab| <= atol + rtol * |matlab|"
  }
}
